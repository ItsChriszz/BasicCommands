package commands;
import org.bukkit.GameMode;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.java.JavaPlugin;

public class BasicCommands extends JavaPlugin {

	
	public BasicCommands instance;

	public void onEnable() {
		this.instance = this;
		saveDefaultConfig();
	}

	public void onDisable() {
		this.instance = null;
		reloadConfig();
	}
	
	
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		
		Player p = (Player)sender;
		if(cmd.getName().equalsIgnoreCase("fly")) {  //fly command
			if(p.isFlying() == false) {
				p.setAllowFlight(true);
				p.setFlying(true);
				p.sendMessage("Flight enabled");
				
		}
			else if(p.isFlying() == true) {  //disabling fly if enabled
				p.setAllowFlight(false);
				p.setFlying(false);
				p.sendMessage("Flight Disabled");
			}
			else {
				p.sendMessage("unknown command");  //else unknown command
			}
	}
		 if(cmd.getName().equalsIgnoreCase("day")) {   //day command
			p.getWorld().setTime(0);
			p.sendMessage("Time set to day");
			
		}
		 if(cmd.getName().equalsIgnoreCase("night")) {   //night command
			p.getWorld().setTime(13000);
			p.sendMessage("Time set to day");
		}
		if(cmd.getName().equalsIgnoreCase("rain")) {   //rain
			p.getWorld().setStorm(true);
			p.sendMessage("Rain started to fall");
		}
		if(cmd.getName().equalsIgnoreCase("gmc")) {   //gmc commannd
			p.setAllowFlight(true);
			p.setGameMode(GameMode.CREATIVE);
			p.sendMessage("setgame to creative");
		}	
		if(cmd.getName().equalsIgnoreCase("gms")) {   //gms commannd
			p.setAllowFlight(false);
			p.setGameMode(GameMode.SURVIVAL);
			p.sendMessage("setgame to survival");
		}	
		else if(cmd.getName().equalsIgnoreCase("sun")) {   //sun
			p.getWorld().setStorm(false);
			p.sendMessage("sunny weather set");
		}	
		else if(cmd.getName().equalsIgnoreCase("website")) {   //website command
			p.sendMessage("http//:http://stuckingamenetwork.com/");
		}	
		else if(cmd.getName().equalsIgnoreCase("wb")) {   //website command
			p.sendMessage("http//:http://stuckingamenetwork.com/");
		}	
		
		return true;
}
}
